name: Run Pytest on Push

on:
  push:  # Стартуємо при будь-якому push
    branches:
      - '**'  # Вкажемо що для всіх гілок

jobs:
  test:
    runs-on: ubuntu-latest

  steps:
    - name: Клонуємо репозитарій на віртуальну машину
      uses: actions/checkout@v3

    - name: Встановимо Python версія 3.10 на віртуальну машину
      uses: actions/setup-python@v4
      with: python-version: '3.10'

    - name: Встановимо бібліотеку pytest
      run: pip install pytest

    - name: Запуск тестування
      run: pytest
